            <enum name="rectangle"       value="2"/>
            <enum name="oval"            value="3"/>
        </attr>
        <attr name="ttv_type"         format="enum">
            <enum name="fixation"   value="0"/>
            <enum name="surround"   value="1"/>
            <enum name="surround_v" value="2"/>
            <enum name="surround_h" value="3"/>
        </attr>
        <attr name="ttv_surround_padding" format="integer"/>
        <attr name="ttv_direction"        format="enum">
            <enum name="left"        value="0"/>
            <enum name="top"         value="1"/>
            <enum name="right"       value="2"/>
            <enum name="bottom"      value="3"/>
